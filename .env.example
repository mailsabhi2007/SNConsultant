# ServiceNow Consultant - Environment Configuration
# Copy this file to .env and fill in your values

# Required - Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Required - JWT Secret (minimum 32 characters)
JWT_SECRET=change-me-to-a-secure-random-string-minimum-32-chars

# Optional - Anthropic Model (default: claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Optional - Tavily API Key (for web search)
TAVILY_API_KEY=tvly-your-key-here

# Optional - ServiceNow Instance Configuration
SERVICENOW_INSTANCE=dev12345.service-now.com
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=your-password

# Optional - Server Configuration
PORT=8000
HOST=0.0.0.0

# Optional - Database Path
DATABASE_PATH=./data/app.db

# Optional - Logging
LOG_LEVEL=INFO
